<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="roam-pu" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <!-- Entity classes -->
        <class>com.roam.model.Operation</class>
        <class>com.roam.model.Task</class>
        <class>com.roam.model.Note</class>
        <class>com.roam.model.Tag</class>
        <class>com.roam.model.NoteTemplate</class>
        <class>com.roam.model.CalendarEvent</class>
        <class>com.roam.model.CalendarSource</class>
        <class>com.roam.model.JournalEntry</class>
        <class>com.roam.model.JournalTemplate</class>
        <class>com.roam.model.Region</class>
        
        <properties>
            <!-- H2 Database Configuration -->
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="jakarta.persistence.jdbc.url" 
                      value="jdbc:h2:file:~/roam/roamdb;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE;INIT=CREATE USER IF NOT EXISTS admin PASSWORD 'hulululu' ADMIN\;SET SCHEMA PUBLIC"/>
            <property name="jakarta.persistence.jdbc.user" value="admin"/>
            <property name="jakarta.persistence.jdbc.password" value="hulululu"/>
            
            <!-- Hibernate Configuration -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            
            <!-- Performance Settings -->
            <property name="hibernate.connection.pool_size" value="10"/>
            <property name="hibernate.current_session_context_class" value="thread"/>
        </properties>
    </persistence-unit>

</persistence>
